[push]
  default = simple
  followTags = true
  autoSetupRemote = true

[diff]
    # Use better, descriptive initials (c, i, w) instead of a/b.
  mnemonicPrefix = true
  noPrefix = true
  tool = difftastic
  compactionHeuristic = true
  noprefix = true
  external = difft

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "REMOTE"

[mergetool]
  prompt = false

[pager]
  difftool = true

[rerere]
  enabled = 1
  autoupdate = 1
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[commit]
  gpgsign = true
[gpg]
  program = gpg
  format = ssh
[gpg "ssh"]
  program = /opt/1Password/op-ssh-sign
[rebase]
  autosquash = true
[log]
    # Use abbrev SHAs whenever possible/relevant instead of full 40 chars
  abbrevCommit = true
[init]
  defaultBranch = main
[pull]
  ff = only
[help]
  autocorrect = 1

[url "https://github.com/"]
  insteadOf = gh:
[url "https://gist.github.com/"]
  insteadOf = gist:

[url "ssh://git@github.com/"]

