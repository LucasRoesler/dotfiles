  nobranch = red
  unmerged = red
  untracked = cyan
  added = cyan
  changed = red
[color "diff"]
  meta = red bold
  frag = black bold
  func = blue
  old = red
  new = cyan
  commit = red
  whitespace = red
  context = normal
[color "branch"]
  current = cyan
  local = white
  remote = magenta
  upstream = magenta
  plain = normal
[color "decorate"]
  branch = yellow
  remoteBranch = magenta
  tag = magenta
  stash = cyan
  HEAD = bold blue
[color "interactive"]
  prompt = red
  header = red bold
  error = red
  help = black bold
[color "grep"]
  context = normal
  match = cyan
  filename = blue
  function = blue
  selected = normal
  separator = red bold
  linenumber = normal
